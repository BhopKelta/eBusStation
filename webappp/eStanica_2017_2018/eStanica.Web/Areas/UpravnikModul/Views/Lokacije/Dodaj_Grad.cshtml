@model LokacijeDodajVM
@{
    ViewData["Title"] = "Dodaj_Grad";
}

<h2>Dodaj grad</h2>
<p></p>
<p></p>

<form asp-controller="Lokacije" asp-action="SnimiGrad" method="post">

    <div class="form-group">

        @Html.LabelFor(x => x.Drzave, "Država")
        <div class="row">
            <div class="col-sm-4">
                @Html.DropDownListFor(x => x.DrzavaId, Model.Drzave, "Odaberite drzavu", new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(x => x.Drzave, "Naziv grada")
        <div class="row">
            <div class="col-sm-4">
                @Html.TextBoxFor(x => x.Naziv, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row" >
            <div class="col-sm-4 text-right">
                <button class="btn btn-secondary">Snimi</button>
            </div>
        </div>
    </div>
</form>
